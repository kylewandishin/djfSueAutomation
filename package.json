{
  "name": "jobify",
  "module": "scripts/index.ts",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "precommit": "concurrently -g -n \"eslint,test:unit,build\" -c \"#341BAB,#A6CC66,#3077C6\" \"bun run lint\" \"bun test unit\" \"bun run build\"",
    "main": "bun run scripts/index.ts",
    "test": "bun test unit",
    "test:integration": "bun test integration",
    "test:all": "concurrently -g -n \"test:unit,test:integration\" -c \"#A6CC66,#A6CC66\" \"npm run test\" \"npm run test:integration\"",
    "lint": "eslint . --fix --cache",
    "build": "rimraf dist && bun run tsc"
  },
  "lint-staged": {
    "*": "prettier -u --write"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/bun": "latest",
    "@types/node": "^22.5.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-tsdoc": "^0.3.0",
    "globals": "^15.9.0",
    "husky": "^9.1.5",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript-eslint": "^8.2.0"
  },
  "peerDependencies": {
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.4.5",
    "node-cron": "^3.0.3",
    "playwright": "^1.46.1",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "stripe": "^16.8.0"
  }
}
